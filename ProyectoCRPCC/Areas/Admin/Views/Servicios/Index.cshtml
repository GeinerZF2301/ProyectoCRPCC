@model IEnumerable<ProyectoCRPCC.Models.Servicios>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row mt-5">
    <div class="col-6">
        <h2 class="text-center text-dark ">< Servicios </h2>
    </div>
    
        <div class="col-6 text-right">
            <a class="btn btn-success" 
             asp-action="Upsert"> <i class="fas fa-plus"></i> Crear Servicio </a>
        </div>
    
</div>

<br />

<div class="p-4 border rounded">
    <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark bg-success">
            <tr class="table-info">
                <th style="max-width:35%;text-align:center;">NombreServicio</th>
                <th style="max-width:35%;text-align:center;">Descripcion</th>
                <th style="max-width:35%;text-align:center;">Categoria</th>
                <th style="max-width: 25%;text-align: center;">Estado</th>
                <th style="max-width: 25%;text-align: center;">Operación</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/servicios.js"></script>
}